# Environment Variables for Production
# Copy this file to .env and fill in the values

# ============================================
# REQUIRED VARIABLES
# ============================================

# MongoDB Connection String
MONGODB_URI=mongodb+srv://<username>:<password>@cluster.mongodb.net/todoapp

# JWT Secret - Generate a strong random string (e.g., openssl rand -base64 32)
JWT_SECRET=your-super-secret-jwt-key-change-this

# ============================================
# GOOGLE OAUTH - REQUIRED FOR GOOGLE LOGIN
# ============================================

# Get these from Google Cloud Console > APIs & Services > Credentials
# Create OAuth 2.0 Client ID credentials
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# ============================================
# PRODUCTION DEPLOYMENT URLS
# ============================================

# For Vercel deployment (automatically set by Vercel)
# VERCEL=1

# For Render deployment - Use your Render URL (without trailing slash)
# Example: RENDER_URL=https://todo-app-srbx.onrender.com
RENDER_URL=

# API URL (if different from RENDER_URL)
# Example: API_URL=https://todo-app-srbx.onrender.com
API_URL=

# Frontend URL for redirects
# Example: FRONTEND_URL=https://metb-todo.vercel.app
FRONTEND_URL=

# ============================================
# ADMIN (OPTIONAL)
# ============================================

# Admin email for elevated privileges
# ADMIN_EMAIL=admin@example.com

# ============================================
# NODE ENVIRONMENT
# ============================================

# Set to production in deployment
# NODE_ENV=production

