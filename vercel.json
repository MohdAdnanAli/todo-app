{
  "version": 2,
  "buildCommand": "cd frontend && bun install && bun run build",
  "installCommand": "bun install",
  "builds": [
    {
      "src": "api/index.ts",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/dist/**",
      "use": "@vercel/static"
    }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/index.ts" },
    { "source": "/(.*)", "destination": "/frontend/dist/index.html" }
  ]
}